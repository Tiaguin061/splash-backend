{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "strict": true,
    "strictPropertyInitialization": false,
    "outDir": "./build",
    "baseUrl": "./src",
    "paths": {
      "@modules/*": [
        "modules/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@shared/*": [
        "shared/*"
      ]
    },
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
